<header class = "navbar navbar-fixed-top navbar-default">
    <div class="container">
      <%= link_to "My Recipies", root_path, class: "btn btn-lg btn-info", id: "logo" %>
      
      <ul class="nav_ul_item">
        <div class="dropdown">
            <%= link_to '#', class: "btn btn-default btn-danger dropdown-toggle", "data-toggle" => "dropdown" do %>
              Styles <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <% Style.all.each do |style| %>
                <li>
                  <%= link_to style.name, style_path(style) %>
                  
                  <% if (logged_in? && current_user.admin?) %>
                    <%= link_to "[edit/delete]", edit_style_path(style) %>
                  <% end %>
                  
                </li>
              <% end %>
              
              <% if logged_in? %>
                <li class='divider'></li>
                <li>
                  <%= link_to "New Style",new_style_path %>
                </li>
              <% end %>
            </ul>
        </div>
      </ul>
      
      <ul class="nav_ul_item">
        <div class="dropdown">
            <%= link_to '#', class: "btn btn-default btn-danger dropdown-toggle", "data-toggle" => "dropdown" do %>
              Ingredients <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <% Ingredient.all.each do |ing| %>
                <li>
                  <%= link_to ing.name, ingredient_path(ing) %>
                  
                  <% if (logged_in? && current_user.admin?) %>
                    <%= link_to "[edit/delete]", edit_ingredient_path(ing) %>
                  <% end %>
                  
                </li>
                
                
              <% end %>
              
              <% if logged_in? %>
                <li class='divider'></li>
                <li>
                  <%= link_to "New Ingredient", new_ingredient_path %>
                </li>
              <% end %>
            </ul>
          </div>
      </ul>
      
      <% if logged_in? %>
        <div class="nav_item">
          <%= link_to "New recipe", new_recipe_path, class: "btn btn-default btn-warning" %>
        </div>
        
        
        <!-- create dropdown list to give logged-in user options-->
        <ul class="user_account">
          <li class="dropdown">
            <%= link_to '#', class: "btn btn-default btn-danger dropdown-toggle", "data-toggle" => "dropdown" do %>
              <%= current_user.chefname %> 
              <% if current_user.admin? %>
                (ad)
              <% end %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to "View Profile", chef_path(current_user) %> </li>
              <li><%= link_to "Edit Profile", edit_chef_path(current_user) %></li>
              <li class = "divider"></li>
              <li><%= link_to "Log out", logout_path %> </li>
            </ul>
            
          </li>
        </ul>
        
        
        
      <% else %>
      <div class="user_account">
        <%= link_to "Log In", login_path, class: "btn btn-default btn-success" %>
      </div>

      <% end %>
    </div>
  </header>