<div class="row">
  <div class="col-md-12">
    <% flash.each do |message_type, message| %>
      <div class= "alert alert-<%= message_type %> "> <!--the embedded ruby is to flash the message (success or danger). It is a twitter bootstrap -->
        <%= message %>
        <a class = "close" data-dismiss= "alert">&#215;</a> <!-- a tag to close the message box -->
      </div>
    <% end %>
  </div>
</div>