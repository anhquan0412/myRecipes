<%= render 'shared/page_title', title: 'Log in' %>


<div class = "row">
  <div class = "well col-md-6 col-md-offset-3">
    <!-- dont do form_for here because we dont have to create a model. We dont have a model -->
    <%= form_tag '/login' do %>
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    
    
      <%= label_tag :password %>
      <%= password_field_tag :password %>
      
      
      <%= submit_tag 'Login', class: 'btn btn-success' %>
    <% end %>
    
    &nbsp&nbsp
    
    <h3 class = "center"> Don't have an account yet?  
      <%= link_to "Sign Up!", register_path, class: "btn btn-success btn-small " %>
    </h3>
    
  </div>
</div>