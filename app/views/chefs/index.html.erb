<%= render 'shared/page_title', title: "All Chefs" %> <!-- remember to use double quote here for string? -->

<!-- doing tab. Look at index page in recipe -->
<ul class = "nav nav-tabs">
  <li>
    <%= link_to "Recipes",recipes_path %>
  </li>
  <li class = 'active'> <!-- the Active class will be the selected tab -->
    <%= link_to "Chefs", chefs_path %>
  </li>
</ul>


&nbsp&nbsp

<div class = "row">
 <div class = "col-md-4 col-md-offset-4 center">
   <%= will_paginate %>
 </div> 
</div>


<% @chefs.each do |chef| %>
  <div class = "row">
   <div class = "col-md-4 col-sm-offset-1 center">
     <%= link_to gravatar_for(chef, size: 210), chef_path(chef) %>
     
     
     
   </div> 
   
   
   <div class = "col-md-4 well">
     <p>
       <h3>Chef name: <%= link_to chef.chefname, chef_path(chef) %></h3>
       &nbsp&nbsp
       <hr class = "thick_divider"/>
       
       &nbsp&nbsp
       
     </p>
   </div>
   
  </div>

  <hr/>
<% end %>